<div id="main" class="pure-u" data-ng-controller="HomeCtrl">
  <div class="content header pure-u-1">
    <h1 class="center">Consilium</h1>
    <hr class="soften">
    <div class="center quick-actions">Quick actions: <a class="pretty" href="" data-click-href="#/clients/new">Create Client</a> <span class="quick-separator">&diams;</span> <a class="pretty" href="" data-click-href="#/clients/index">Search for Client</a></div>
  </div>
  <div class="content">
    <div class="client-landing">
      <div class="recent-client">
        <h4>Some of your most recent clients</h4>
        <div data-ng-controller="ClientsRecentCtrl">
          <%= render :partial => 'templates/clients/recent_table',
                     :locals => { :limit => 5 } %>
        </div>
      </div>
      <% # TODO: Show the user's name here. %>
      <div class="recent-edit">
        <h4>Recent changes to clients</h4>
        <div>
          <%= render :partial => 'templates/action_table',
                     :locals => {
                       :name => 'history',
                       :model => 'history',
                       :limit => 5,
                       :rowHref => '#/clients/show/{{ item.client_id }}',
                       :fields => [
                         {
                           :name => 'Description',
                           :class => 'description',
                           :content => <<-END
                             {{ item.description | ellipsize: 40:1 }}
                             <div class="detail">
                               on client <a data-click-href="#/clients/show/{{ item.client_id }}" class="pretty" eat-click>{{ item.client_name }} </a>
                               by <a data-click-href="#/users/show/{{ item.user_id }}" class="email" eat-click>{{ item.user_email }}</a><br />
                               on <span class="date">{{ item.updated_at | date: 'medium'}}</span>
                             </div>
                           END
                         }
                       ],
                       :actions => [
                         {
                           :class => 'pure-icon',
                           :icon => 'icon-angle-right',
                           :href => '#/clients/edit/{{ item.client_id }}?change={{ item.id }}',
                         }
                       ]
                     } %>
        </div>
      </div>
    </div>
  </div>
</div>
