<%= render :partial => 'templates/clients/action_table',
           :locals => {
             :name => 'clients',
             :model => 'clients',
             :limit => local_assigns[:limit],
             :rowhref => '/clients/show/{{ item.id }}',
             :fields => [
               {
                 :name => 'Name',
                 :class => 'name',
                 :content => '{{ item.name }}'
               },
               {
                 :name => 'Company',
                 :class => 'company',
                 :content => '{{ item.company }}'
               }
             ],
             :actions => [
               {
                 :class => 'pure-button-success',
                 :icon => 'icon-share-alt',
                 :href => '#/clients/show/{{ item.id }}',
               }
             ]
           } %>