<%= render :partial => 'templates/action_table',
           :locals => {
             :name => 'clients',
             :model => 'clients.clients',
             :limit => local_assigns[:limit],
             :rowHref => '#/clients/show/{{ item.id }}',
             :fields => [
               {
                 :name => 'Company',
                 :class => 'company',
                 :content => '{{ item.company }}'
               },
               {
                 :name => 'Name',
                 :class => 'name',
                 :content => '{{ item.name }}'
               },
             ],
             :actions => [
               {
                 :class => 'pure-button-info',
                 :icon => 'icon-share-alt',
                 :href => '#/clients/show/{{ item.id }}',
               },
             ],
           } %>
