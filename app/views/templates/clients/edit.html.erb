<% fields = Client::FIELDS %>

<%= render :layout => 'layouts/clients/edit', :locals => {:fields => fields} do %>
  <%= render :partial => 'templates/breadcrumbs',
             :locals => { :paths => {
        "Home" => "#/",
        "Clients" => "#/clients/index",
        "{{ (clientId || savedOnce) && (client.company.value || 'Client') }}" => "{{ '#/clients/show/' + client.id }}",
        "{{ title() }}" => "#/clients/{{ clientChangeId ? 'edit/' + clientId + '/' + clientChangeId : (clientId ? 'edit/' + clientId : 'new') }}",
      }}
   %>
<% end %>
