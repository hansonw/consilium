<div data-ng-controller="ClientsIndexCtrl" class="pure-form">
  <div class="content header pure-u-1">
    <h2 class="no-bottom-margin">Search Clients</h2>
    <div class="breadcrumbs">
      <a data-ng-href="#/">Home</a>
      <span class="divider">&gt;</span>
      <a data-ng-href="#/clients/index">Search Clients</a>
      <hr class="soften" />
    </div>
  </div>

  <div class="content">
    <div class="client-search">
      <div class="search-client-form">
        <div class="form-nav">
          <div class="search" scroll-fix scroll-fix-condition="screen and (min-width:1200px)">
            <div class="search-controls">
              <input id="search" type="text" class="pure-input" placeholder="Name, email, or company" autocomplete="off" data-ng-model="query">
              <i class="icon-spinner icon-spin spinner" data-ng-class="loading && 'loading'"></i>
              <button id="btnSearch" class="pure-button pure-button-small pure-button-primary">
                <i class="icon-search"></i>
              </button>
            </div>
            <div class="advanced-search" advanced-search>
              <div class="advanced-search-inner">
                <div class="advanced-search-fields">
                  <hr class="soften" />
                  <div class="advanced-search-field">
                    <%= label_tag 'name', 'Name' %>
                    <%= text_field_tag 'name', nil, :placeholder => 'First name, last name, etc.', :data => {:ng_model => 'filter.name'} %>
                  </div>
                  <div class="advanced-search-field">
                    <%= label_tag 'email', 'Email' %>
                    <%= text_field_tag 'email', nil, :placeholder => 'Email address', :data => {:ng_model => 'filter.email'} %>
                  </div>
                  <div class="advanced-search-field">
                    <%= label_tag 'company', 'Company' %>
                    <%= text_field_tag 'company', nil, :placeholder => 'Company', :data => {:ng_model => 'filter.company'} %>
                  </div>
                </div>
                <a href="" class="pretty advanced-search-btn">Advanced Search <i class="icon-caret-down"></i></a>
              </div>
            </div>
          </div>
        </div>
        <div class="form-content">
          <table data-infinite-scroll data-update="updateResults(true)" class="client-table pure-table pure-table-horizontal pure-table-full-width">
            <thead>
              <tr>
                <th class="name">Name</th>
                <th class="company">Company</th>
                <th class="actions lign-right">Actions</th>
              </tr>
            </thead>
            <tbody>
              <tr data-ng-show="error">
                <td colspan="3">Could not load results. Please try again later</td>
              </tr>
              <tr data-ng-show="!error && !clients.length && !loading">
                <td colspan="3">No clients matching your search criteria.</td>
              </tr>
              <tr data-ng-repeat="client in clients" data-ng-click="clientClick(client.id)">
                <td class="name">{{ client.name.value }}</td>
                <td class="company">{{ client.company.value }}</td>
                <td class="actions align-right">
                  <a data-ng-href="#/clients/view/{{ client.id }}" class="pure-button pure-button-small pure-button-success">
                    <i class="icon-share-alt"></i>
                  </a>
                </td>
              </tr>
              <tr id="loading" data-ng-show="loading && (!clients.length || moreResults)">
                <td colspan="3"><i class="icon-spinner icon-spin icon-large"></i> Loading results...</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
