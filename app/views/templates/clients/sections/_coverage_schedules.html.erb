<div class="pure-g-r" id="coverageScheduleForm">
  <div class="pure-u-1-5">
    <h2>Category</h2>
    <hr class="soften" />
    <select name="category" data-ng-model="<%= sectionId %>.category" required>
      <% schedules.each do |category| %>
        <option><%= category[:name] %></option>
      <% end %>
    </select>
  </div>
  <div class="pure-u-2-5">
    <h2>Type</h2>
    <hr class="soften" />
    <select data-ng-show="!<%= sectionId %>.category" disabled>
      <option>             </option>
    </select>
    <% schedules.each do |category| %>
      <select name="type" data-ng-model="<%= sectionId %>.type" data-ng-show="<%= sectionId %>.category == '<%= category[:name] %>'" required>
        <% category[:type].each do |type| %>
          <option><%= type[:name] %></option>
        <% end %>
      </select>
    <% end %>
  </div>
  <div class="pure-u-2-5">
    <h2>Values</h2>
    <hr class="soften" />
    <% schedules.each do |category| %>
      <% category[:type].each do |type| %>
        <% if !type[:options].nil? %>
          <%
            optionsMenu = {
              :name => 'Options',
              :id => 'options',
              :type => 'radio',
              :options => type[:options],
            }
           %>
          <div data-ng-show="<%= sectionId %>.type == '<%= type[:name] %>'">
            <%= client_field optionsMenu, parent_field: {:id => sectionId} %>
          </div>

          <%
            typesMenu = {
              :name => 'Type',
              :id => 'types',
              :type => 'radio',
              :options => type[:type],
            }
           %>
          <div data-ng-show="<%= sectionId %>.type == '<%= type[:name] %>'">
            <%= client_field typesMenu, parent_field: {:id => sectionId} %>
          </div>
        <% end %>
      <% end %>
    <% end %>

    <%
      deductible = {
        :name => 'Deductible',
        :id => 'deductible',
        :type => 'currency',
        :placeholder => '$ CAN (ex. 111.11)',
      }
     %>
    <%= client_field deductible, parent_field: {:id => sectionId} %>
    <%
      coIns = {
        :name => 'Co-Ins',
        :id => 'coIns',
        :type => 'text',
        :placeholder => '(ex. 80/20)',
      }
