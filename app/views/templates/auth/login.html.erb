<div class="content login" data-ng-controller="AuthLoginCtrl">
  <h1 class="center">Consilium</h1>
  <hr class="soften" />
  <div class="separator-small"></div>
  <%= form_tag '/auth/login', :class => 'pure-form pure-form-aligned', :method => :put do %>
    <%= field_set_tag nil do %>
      <div class="pure-control-group">
        <%= label_tag 'email', 'Email Address' %>
        <%= email_field_tag 'email', nil, :placeholder => 'Email address', :required => true, :data => {:ng_model => 'email'} %>
      </div>
      <div class="pure-control-group">
        <%= label_tag 'Password', 'Password' %>
        <%= password_field_tag 'password', nil, :placeholder => 'Password', :required => true, :data => {:ng_model => 'password'} %>
      </div>
    <% end %>
    <div class="login-buttons">
      <%= link_to "Forgot Password", new_user_password_path, :class => 'pure-button' %>
      <%= link_to "Sign Up", new_user_registration_path, :class => 'pure-button pure-button-secondary' %>
      <%= link_to "Login", new_user_session_path, :class => 'pure-button pure-button-primary' %>
    </div>
  <% end %>
</div>
