<div class="content login pure-u" data-ng-controller="ResetPasswordCtrl">
  <h1 class="center">Consilium</h1>
  <hr class="soften" />
  <div class="separator-small"></div>
  <aside data-ng-show="activate">Welcome to Consilium. Please enter a password you would like to use to login.</aside>
  <br>
  <form name="resetPassword" class="pure-form pure-form-aligned" data-ng-submit="resetPassword()">
    <div class="pure-form-fields">
      <div class="pure-control-group">
        <%= label_tag 'password', 'Password' %>
        <%= password_field_tag 'password', nil, :placeholder => 'Password', :required => true, :data => {:ng_model => 'loginData.password'} %>
      </div>
      <div class="pure-control-group">
        <%= label_tag 'password_confirm', 'Confirm Password' %>
        <%= password_field_tag 'password_confirm', nil, :placeholder => 'Confirm Password', :required => true, :data => {:ng_model => 'loginData.password_confirm'} %>
      </div>
    </div>
    <div class="login-buttons">
      <button class="pure-button pure-button-primary" type="submit">Submit</button>
    </div>
  </form>
</div>
