<% environment.context_class.instance_eval { include ActionView::Helpers } %>
<% environment.context_class.instance_eval { include AngularHostHelper } %>

App.factory 'ClientChange', ['$resource', 'AuthToken', ($resource, AuthToken) ->
  resource = $resource('<%= angularApiPath('/api/client_changes/:id') %>', {format: 'json', id: '@id'}, {'save': {method: 'PUT'}})
  AuthToken.wrapActions(resource, ["query", "update"])
]
